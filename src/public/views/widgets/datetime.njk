{% extends 'widgets/base-widget.njk' %}

{% block input %}
  {% set isDisabled=(widget.column.isCreateDate or widget.column.isUpdateDate) %}

  {% if not isDisabled %}
    <input
      class="form-control"
      type="text"
      id="{{ widget.column.propertyName }}"
      name="{{ widget.column.propertyName }}"
      {% if widget.getValue() %}value="{{ widget.getValue() | date('YYYY-MM-DD hh:mm:ss') }}"{% endif %}
      pattern="[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}"
      {{ "required" if not widget.column.isNullable }}
    />
  {% else %}
    <div class="col-form-label">
      {{ widget.getValue() | date('YYYY-MM-DD hh:mm:ss') }}
    </div>
  {% endif %}
{% endblock %}
